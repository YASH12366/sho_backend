<h1>This is Product Index</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Price</th>
    <th>Inventory Count</th>
    <th><%= @return_Empty_Inventory %></th>

    <th></th>
  </tr>
 
  <% @products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
      <td><%= product.title %></td>
      <td><%= product.price %></td>
      <td><%= product.inventory_count %></td>
      <td><%= link_to 'Show', product_path(product) %></td>
      <td><%= link_to 'Purchase', {:controller => "purchases", :action => "new", :product_id => product.id } %></td>

    </tr>
  <% end %>
</table>

<%= link_to 'New Product', new_product_path %>
<%= link_to 'Cart', purchases_path %>

